SELECT - селектира данни от таблицата и ги връща
Пр.: SELECT column1 FROM table_name;

UPDATE - модифицира съществуващите записи в таблица
Пр.: UPDATE table_name
     SET column1 = value1, column2 = value2, ...
     WHERE condition;

DELETE - изтрива записи от съществуваща таблица
Пр.: DELETE FROM table_name WHERE [condition];

INSERT INTO - добавяне на нови редове от данни в таблица
Пр.: INSERT INTO TABLE_NAME VALUES (value1,value2,value3,...valueN);

CREATE DATABASE - създава нова база данни
Пр.: CREATE DATABASE database_name;

ALTER DATABASE - модифициране, поддържане или възстановяване на съществуваща база данни
Пр.: ALTER DATABASE old_name MODIFY NAME = new_name;

CREATE TABLE - създава нова таблица
Пр.: CREATE TABLE table_name (
     column1 datatype,
     column2 datatype,
     .....
     columnN datatype,
     PRIMARY KEY( one or more columns )
  );

ALTER TABLE - модифицира структурата на таблицата
Пр.: ALTER TABLE table_name ADD column_name datatype;

DROP TABLE - изтрива таблицата
Пр.: DROP TABLE table_name;
